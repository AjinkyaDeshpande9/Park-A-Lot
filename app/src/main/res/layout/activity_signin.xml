<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    android:orientation="vertical"
    tools:context=".SIgnIn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/fenix"
        android:text="Welcome Back!"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:fontFamily="@font/fenix"
        android:text="Email"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/logEmail"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_textbox"
        android:hint="email@example.com"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#5c7aab"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fenix"
        android:text="Password"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/logPassword"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_textbox"
        android:hint="••••••••••"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#5c7aab"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/lofForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        android:clickable="true"
        android:fontFamily="@font/fenix"
        android:text="Forgot Password?"
        android:textColor="#174188"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/round_textbox"
        android:fontFamily="@font/fenix"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:visibility="visible" />
    <TextView
        android:id="@+id/createAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clickable="false"
        android:fontFamily="@font/fenix"
        android:text="Never Parked with Us? Register Here"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>