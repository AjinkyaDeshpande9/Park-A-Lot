<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    android:orientation="vertical"
    tools:context=".Register">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fenix"
        android:text="Sign Up"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:fontFamily="@font/fenix"
        android:text="Name"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_textbox"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#5c7aab"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fenix"
        android:text="Email"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_textbox"
        android:hint="email@example.com"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#5c7aab"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fenix"
        android:text="Mobile Number"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="72dp"
            android:layout_height="54dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/round_textbox"
            android:fontFamily="@font/fenix"
            android:text="+91"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/regPhone"
            app:layout_constraintEnd_toStartOf="@+id/regPhone"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/regPhone"
            android:layout_width="260dp"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/round_textbox"
            android:hint="9********1"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="#5c7aab"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            tools:layout_editor_absoluteY="6dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/fenix"
        android:text="Password"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_textbox"
        android:hint="••••••••••"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:password="true"
        android:textColorHint="#5c7aab"
        android:textSize="23sp" />


    <Button
        android:id="@+id/regButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/round_textbox"
        android:fontFamily="@font/fenix"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/alreadyAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:fontFamily="@font/fenix"
        android:text="Already have an Account? Login Here"
        android:textColor="#AEFFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />


</LinearLayout>